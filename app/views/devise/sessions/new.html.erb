<!DOCTYPE html>
<html>
  <%= stylesheet_link_tag "sessions.css" %>
  <head>
    <title>Logowanie</title>
    <link href='http://fonts.googleapis.com/css?family=Poppins&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
  </head>
  <body>
    <section>
      <div>
        <%= image_tag "Wersja5.png", class: "logo" %>
      </div>
      <div id="box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2>Logowanie</h2>
          <div class="field">
            <ion-icon name="mail-outline"></ion-icon>
            <%= f.label :email, class: "etykieta" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "okno" %>
          </div>

          <div class="field">
            <ion-icon name="lock-closed-outline"></ion-icon>
            <%= f.label :password, class: "etykieta" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "okno" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "label2" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Zaloguj", class: "guzik"%>
          </div>

          <div class="powrot">
            <%= link_to "Powrót do strony głównej", '/', class: "linczek" %>
          </div>
        <% end %>

        <!--<%= render "devise/shared/links" %>-->
      </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  </body>
</html>